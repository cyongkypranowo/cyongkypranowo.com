---
import { profileConfig } from "../config";
import { Icon } from "astro-icon/components";
const year = new Date().getFullYear();
---

<div
  class="card-base max-w-[var(--page-width)] min-h-[4.5rem] rounded-b-none mx-auto flex items-center px-6"
>
  <div class="transition text-50 text-sm">
    &copy; {year}
    {profileConfig.name}. All Rights Reserved.
    <br />
    <a
      class="link text-[var(--primary)] font-medium"
      target="_blank"
      href="https://github.com/saicaca/fuwari"
    >
      Build with Astro, theme from Fuwari & deploy in Vercel
    </a>
  </div>
</div>
